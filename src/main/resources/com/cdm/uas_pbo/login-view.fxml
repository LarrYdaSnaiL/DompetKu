<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cdm.uas_pbo.controller.LoginController"
      style="-fx-padding: 25; -fx-background-color: #f4f4f4;">
    <Text text="DompetKu." style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #333;"/>
    <Text text="Login or Register to continue"/>
    <VBox spacing="10" maxWidth="300">
        <Label fx:id="statusLabel" textFill="RED" wrapText="true"/>
        <TextField fx:id="emailField" promptText="Email Address"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
    </VBox>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="100"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" prefWidth="100"/>
    </HBox>
</VBox>