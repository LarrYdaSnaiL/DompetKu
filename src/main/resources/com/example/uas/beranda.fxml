<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/23.0.1"
        fx:controller="com.example.uas.BerandaController"
        prefWidth="1024" prefHeight="640">

    <!-- Sidebar -->
    <left>
        <VBox
                spacing="20"
                alignment="TOP_CENTER"
                prefWidth="220"
                style="-fx-background-color: #dddddd;">

            <padding>
                <Insets top="30" bottom="20"/>
            </padding>

            <ImageView fitHeight="100" fitWidth="100">
                <clip>
                    <Circle centerX="50" centerY="50" radius="50"/>
                </clip>
            </ImageView>

            <VBox spacing="5" alignment="CENTER">
                <Label
                        text="Rafii"
                        style="-fx-font-size: 18px; -fx-text-fill: brown;"/>
            </VBox>

            <VBox
                    spacing="10"
                    alignment="CENTER"
                    style="-fx-padding: 30 0 0 0;">
                <Button
                        fx:id="btnBeranda"
                        text="Beranda"
                        prefWidth="160"
                        style="-fx-background-color: #996600; -fx-text-fill: white;"/>
                <Button
                        fx:id="btnTransaksi"
                        text="Transaksi"
                        prefWidth="160"
                        style="-fx-background-color: #996600; -fx-text-fill: white;"/>
                <Button
                        fx:id="btnProfil"
                        text="Profil"
                        prefWidth="160"
                        style="-fx-background-color: #996600; -fx-text-fill: white;"/>
            </VBox>

            <Button
                    fx:id="btnKeluar"
                    text="Keluar"
                    prefWidth="160"
                    style="-fx-background-color: #cc8800; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Konten Tengah -->
    <center>
        <VBox
                spacing="20"
                alignment="TOP_CENTER"
                style="-fx-background-color: #333333;">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Saldo -->
            <HBox alignment="CENTER">
                <Label
                        text="Saldo Saat Ini: Rp 1.000.000"
                        style="-fx-background-color: #ffcc00; -fx-padding: 12 30; -fx-background-radius: 10; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Pemasukan dan Pengeluaran -->
            <HBox spacing="40" alignment="CENTER">
                <Label
                        text="Pemasukan: Rp 1.500.000"
                        style="-fx-background-color: white; -fx-padding: 10 20; -fx-background-radius: 10;"/>
                <Label
                        text="Pengeluaran: Rp 1.000.000"
                        style="-fx-background-color: white; -fx-padding: 10 20; -fx-background-radius: 10;"/>
            </HBox>

            <!-- Kotak Grafik -->
            <HBox spacing="30" alignment="CENTER">
                <VBox
                        spacing="10"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15;">
                    <Label
                            text="Grafik Pengeluaran"
                            style="-fx-font-weight: bold; -fx-text-fill: #996600;"/>
                    <PieChart
                            fx:id="pengeluaranPieChart"
                            prefWidth="300" prefHeight="300"/>
                </VBox>

                <VBox
                        spacing="10"
                        style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15;">
                    <BarChart fx:id="pemasukanBarChart" prefWidth="300" prefHeight="300">
                        <xAxis>
                            <CategoryAxis label=""/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label=""/>
                        </yAxis>
                    </BarChart>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Histori Transaksi -->
    <right>
        <VBox
                spacing="10"
                prefWidth="250"
                style="-fx-background-color: white; -fx-background-radius: 15;">

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label
                    text="Histori Transaksi"
                    style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #996600;"/>
            <ListView fx:id="listHistori" prefHeight="500"/>
        </VBox>
    </right>

</BorderPane>
