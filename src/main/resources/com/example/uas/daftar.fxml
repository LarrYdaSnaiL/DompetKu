<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="640.0" prefWidth="1024.0"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.example.uas.DaftarController">

    <children>
        <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <!-- Background Image -->
            <ImageView fitWidth="1024" fitHeight="640" preserveRatio="false">
                <image>
                    <Image url="@assets/mainLogo.png" />
                </image>
            </ImageView>

            <!-- Form Register di atas background -->
            <VBox spacing="15.0" alignment="CENTER"
                  style="-fx-background-color: rgba(165,115,61,0.85); -fx-background-radius: 20;"
                  maxWidth="400" maxHeight="400">
                <padding>
                    <Insets top="30" bottom="30" left="40" right="40"/>
                </padding>

                <Label text="Buat Akun DompetKu"
                       style="-fx-font-size: 24px; -fx-text-fill: gold; -fx-font-family: 'Merriweather';"/>

                <TextField promptText="Nama Lengkap"
                           style="-fx-background-radius: 8; -fx-background-color: #555555; -fx-text-fill: white;"/>
                <TextField promptText="Email"
                           style="-fx-background-radius: 8; -fx-background-color: #555555; -fx-text-fill: white;"/>
                <TextField promptText="Username"
                           style="-fx-background-radius: 8; -fx-background-color: #555555; -fx-text-fill: white;"/>
                <PasswordField promptText="Password"
                               style="-fx-background-radius: 8; -fx-background-color: #555555; -fx-text-fill: white;"/>
                <PasswordField promptText="Konfirmasi Password"
                               style="-fx-background-radius: 8; -fx-background-color: #555555; -fx-text-fill: white;"/>

                <Button text="Daftar"
                        style="-fx-background-color: black; -fx-text-fill: gold; -fx-font-size: 18px; -fx-background-radius: 10; -fx-font-family: 'Merriweather';"/>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
