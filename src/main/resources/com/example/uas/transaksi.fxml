<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.uas.TransaksiController"
            prefWidth="1024" prefHeight="640">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="200" style="-fx-background-color: #d3d3d3;">
            <padding>
                <Insets top="30" bottom="20"/>
            </padding>

            <ImageView fitHeight="80" fitWidth="80" style="-fx-background-color: #996600;">
                <clip>
                    <Circle centerX="40" centerY="40" radius="40"/>
                </clip>
            </ImageView>
            <Label text="Rafii" style="-fx-font-size: 18px; -fx-text-fill: #996600;"/>
            <Label text="rafikon123@gmail.com" style="-fx-text-fill: #333333;"/>

            <VBox spacing="10" alignment="CENTER">
                <Button text="Beranda" prefWidth="140" style="-fx-background-color: #996600; -fx-text-fill: white;"/>
                <Button text="Transaksi" prefWidth="140" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
                <Button text="Profil" prefWidth="140" style="-fx-background-color: #996600; -fx-text-fill: white;"/>
            </VBox>

            <Button text="Keluar" prefWidth="140" style="-fx-background-color: #cc8800; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Konten Tengah -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #333333;">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <Label text="Transaksi Terakhir" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Pencarian dan Filter -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search" style="-fx-background-radius: 10;"/>
                <Button text="Filter kategori" style="-fx-background-color: white; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnTambahPemasukan" text="Tambah Pemasukan" style="-fx-background-radius: 5;"/>
                <Button fx:id="btnTambahPengeluaran" text="Tambah Pengeluaran" style="-fx-background-radius: 5;"/>
            </HBox>

            <!-- Scroll daftar transaksi -->
            <ScrollPane fitToWidth="true" prefHeight="500" style="-fx-background-color: transparent;">
                <content>
                    <VBox fx:id="transaksiList" spacing="10">
                        <padding>
                            <Insets top="10" left="10" right="10" bottom="10"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
